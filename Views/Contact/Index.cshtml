
@model List<ContactModel>
@{

	ViewData["Title"] = "Listagem De Pacientes";
}
<div class="text-center">
<div class="d-grid gap-2 d-md-flex justify-content-md-start">
	<a class="btn btn-primary" role="button" asp-controller="Contact" asp-action="New">Adicionar novo paciente</a>
</div>
<br />
<div class="text-center">
	<h1 class="display-4">Listagem De Pacientes</h1>
</div>
<table class="table">
  <thead>
	<tr>
	  <th scope="col">#</th>
	  <th scope="col">Nome</th>
	  <th scope="col">Email</th>
	  <th scope="col">Telefone</th>
	  <th scope="col"></th>
	</tr>
  </thead>
  <tbody>
			@if (Model != null && Model.Any())
			{
				foreach (ContactModel contato in Model)
				{
					<tr>
						<th scope="row">@contato.Id</th>
						<td>@contato.Name</td>
						<td>@contato.Email</td>
						<td>@contato.Celular</td>
						<td>
							<div class="btn-group" role="group" >
								<a role="button" class="btn btn-primary" asp-route-id="@contato.Id" asp-controller="Contact" asp-action="EditPacient">Editar</a>
								<a role="button"  class="btn btn-danger" asp-route-id="@contato.Id"  asp-controller="Contact" asp-action="DeletePacient">Apagar</a>
							</div>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
</div>
